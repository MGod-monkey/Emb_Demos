/**index.wxss**/
.card {
  width: 450rpx;
  height: 290rpx;
  position: relative;
  left: 50%;
  float: left;
}

.content {
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  text-align: center;
  position: relative;
  left: -50%;
}


.content_front {
    height: 25%;
    background-color: cyan;
    text-align: left;
    font-style: normal;
}

text {
  font-size: x-large;
  font-style: italic;
}

.change_input {
  display: flex;
  background-color: #dfe4ea;
  margin: 10rpx 8rpx;
  border-radius: 10%;
  color: #95a5a6;
}
.change_input:hover{
  background-color: white;
}
.message {
  width: 100%;
  padding-top: 450rpx;
  text-align: center;
}