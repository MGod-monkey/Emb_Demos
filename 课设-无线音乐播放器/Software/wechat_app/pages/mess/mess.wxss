/* pages/mess/mess.wxss */
page {
  height: 100%;
	display: flex;
	justify-content: center;
  align-items: center;
  perspective: 500px;
}

.card {
  	/* 相对定位 */
	position: relative;
	width: 80%;
  height: 90%;
  margin-top: 55rpx;
	/* 圆角属性 */
	border-radius: 15%;
  background-color: #fff;
  /* 内容多自动启动滚轮 */
  /* overflow-y: auto; */
	/* 盒子阴影 */
	box-shadow: 1rpx 1rpx 40rpx rgba(0, 0, 0, 0.3);
	transform-style: preserve-3d;
	animation: rotate-reverse 1.2s cubic-bezier(0.66, -0.47, 0.33, 1.5) forwards;
}

.card:hover {
	animation: rotate 1.2s cubic-bezier(0.66, -0.47, 0.33, 1.5) forwards;
}

.card-front,
.card-back {
	display: flex;
	/* 弹性布局 让元素垂直陈列 */
	flex-direction: column;
	/* 现在子元素垂直陈列 那么就是让子元素 水平居中 */
	align-items: center;
	/* 平均分配高度给每一个子元素 */
	/* justify-content: space-around; */
	/* 绝对定位  子元素是绝对定位 父元素需要相对定位 */
	position: absolute;
	width: 100%;
	height: 100%;
	border-radius: 5%;
	background-color: #fff;
}

.card-back {
	transform: rotateY(180deg);
}

.card-avatar {
  display: flex;
  width: 128rpx;
  height: 128rpx;
  transform: translateY(-50%);
  overflow: hidden;
  margin: 0;
  padding: 0;
  /* z-index: 4; */
  /* margin: 20rpx; */
  object-fit: cover;
  border-radius: 50%;
  box-shadow: 0rpx 5rpx 60rpx 0rpx #00e5ff, 0rpx 0rpx 0rpx 8rpx rgb(0 229 255 / 50%);
}

.card-nick {
  text-align: center;
  margin: 0;
  padding: 0;
  transform: translateY(-65%);
  transform: all .3s;
  color: #00e5ff;
  font-weight: 700;
  font-size: medium;
}

.card-front-pj {
  text-align: left;
  display: flex;
  margin: 0;
  padding: 10rpx;
  width: 100%;
  height: 80%;
  flex-direction: column;
  justify-content: space-around;
}

.project {
  margin: 0;
  padding: 0;
  height: calc(90% / 6);
  width: 95%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 不换行操作 */
text {
  margin: 0;
  padding: 0;
}

.title {
  margin-left: 20rpx;
  padding-left: 20rpx;
  font-weight: 800;
  border-left: 10rpx solid #00e5ff;
  border-bottom: 10rpx solid #00e5ff;
}

.value {
  font-size: 30rpx;
  margin-left: 20rpx;
}

.card-back {
  background-color: #f1f2f6;
}
.mqtt-cmd {
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
}

.mqtt-cmd-container {
  background-color: #bdc3c7;
  margin:10rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.mqtt-cmd-accept {
  font-size: 30rpx;
  align-self: start;
  margin: 0 20rpx;
}


/* 下面我们定义一下翻转动画 */
@keyframes rotate {
	0% {
		transform: rotateY(0);
	}
	100% {
		transform: rotateY(180deg);
	}
}

@keyframes rotate-reverse {
	0% {
		transform: rotateY(180deg);
	}
	100% {
		transform: rotateY(0);
	}
}
