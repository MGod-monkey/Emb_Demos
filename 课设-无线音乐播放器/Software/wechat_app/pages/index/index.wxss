page {
  height: 100%;
  background-color: #ecf0f1;
}

iconfont {
  display: inline;
  align-self: center;
}

.device {
  display: flex;
  width: 80%;
  height: 25%;
  position:absolute;
  top: 4%;
  flex-direction: column;
  /* justify-content: center; */
  /* align-items: center; */
  border-radius: 5%;
  background-color: white;
  border: 15rpx solid #333333;
}
.player {
  display: flex;
  width: 80%;
  height: 55%;
  position:absolute;
  top: 38%;
  flex-direction: column;
  align-items: center;
  border-radius: 5%;
  background-color: white;
  border: 15rpx solid #333333;
}

/* 上半部分 */
.img-pro {
  background-color:rgba(255, 255, 255);
  transform: translateY(-60%);
  padding: 0 10rpx;
  border-radius: 50%;
}
image {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-self: center;
  background-color:rgba(255, 255, 255);
  transform: translateY(-60%);
  padding: 0 10rpx;
  border-radius: 50%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mqtt-status, .mqtt-topic, .mqtt-device {
  display: flex;
  width: 100%;
  height: 20%;
  align-items: center;
  margin: 5rpx 15rpx;
  /* padding: 5rpx 15rpx; */
  transform: translateY(-20%);
}

.mqtt-status-text {
  height: 100%;
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.mqtt-status-ip {
  height: 100%;
  width: 100%;
  text-align: left;
  overflow: hidden;
}
/* 修改按钮 */
.change-button {
  color:#1e90ff;
  height: 100%;
  background-color:white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
  /* padding-left: 85rpx; */
}

.mqtt-reconnect {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.change-button-1 {
  color:#1e90ff;
  background-color:white;
  margin-left: 20rpx;
}

/* 下半部分 */
.play-song {
  width: 100%;
  height: 20%;
  margin: 20rpx, 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

