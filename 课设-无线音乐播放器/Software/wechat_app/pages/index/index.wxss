              -40rpx -40rpx 62rpx #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
input.play-center {
  height: 70rpx;
  width: 400rpx;
  margin: 10rpx 5rpx;
  overflow: hidden;
  border-bottom: 5rpx solid #333333;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 10rpx 0 15rpx;
  font-size: 32rpx;
  border-radius: 8%;
}

slider {
  margin:0 20rpx 0 50rpx;
  width: 66%;
}

/* 弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.modal-content {
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modal-input {
  background: #fff;
  border-bottom: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}
.modal-state {
  width: 100%;
  text-align: center;
  font-size: 25rpx;
  font-weight: 700;
}
.input {
  width: 100%;
  height: 82rpx;
  text-align: center;
  font-size: 25rpx;
  line-height: 28rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  color: #333;
}
input-holder {
  color: #666;
  font-size: 28rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}